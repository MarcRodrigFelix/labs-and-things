<h1>Edit <%= @appointment.type_of_appt %> appointment.</h1>
<%= form_for @appointment do |f| %>

  <% if @appointment.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@appointment.errors.count, "error" ) %> did'nt allow your form to save.</h3>
      <ul>
        <% @appointment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :type_of_appt %>
  <%= f.text_field :type_of_appt %>
  <br>
  <%= f.label :appt_time %>
  <%= f.text_field :appt_time %>
  <br>
  <%= f.label :appt_date %>
  <%= f.text_field :appt_date %>
<br>
<br>
<%= f.submit %>
<% end %>

<p><%= link_to "Profile", user_path(@user)%></p>